<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <include
            android:id="@+id/appbar"
            layout="@layout/appbar" />

        <TextView
            android:id="@+id/privateDataTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/private_data"
            android:textColor="?attr/colorSecondary"
            android:textSize="16sp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/appbar"
            app:layout_constraintStart_toStartOf="parent"/>

        <include
            android:id="@+id/nameTextBlock"
            layout="@layout/textview_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/privateDataTextView"
            app:layout_constraintStart_toStartOf="parent"/>

        <include
            android:id="@+id/surnameTextBlock"
            layout="@layout/textview_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/nameTextBlock"
            app:layout_constraintStart_toStartOf="parent"/>

        <include
            android:id="@+id/emailTextBlock"
            layout="@layout/textview_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/surnameTextBlock"
            app:layout_constraintStart_toStartOf="parent"/>

        <include
            android:id="@+id/loginTextBlock"
            layout="@layout/textview_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/emailTextBlock"
            app:layout_constraintStart_toStartOf="parent"/>

        <include
            android:id="@+id/regionTextBlock"
            layout="@layout/textview_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/loginTextBlock"
            app:layout_constraintStart_toStartOf="parent"/>

        <include
            android:id="@+id/logoutButton"
            layout="@layout/logout_button_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/regionTextBlock"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>